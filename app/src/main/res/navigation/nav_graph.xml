<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/start_fragment">

    <fragment
        android:id="@+id/start_fragment"
        android:name="com.example.cookbook.Fragments.Start_fragment"
        android:label="page_one_fragment"
        tools:layout="@layout/start_fragment" >
        <action
            android:id="@+id/action_start_fragment_to_second_fragment2"
            app:destination="@id/second_fragment" />
    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.example.cookbook.Fragments.SecondFragment"
        android:label="page_two_fragment"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_second_fragment_to_allListFragment"
            app:destination="@id/allListFragment" />
        <action
            android:id="@+id/action_second_fragment_to_popularTodaySecondList"
            app:destination="@id/popularTodaySecondList" />
    </fragment>

    <fragment
        android:id="@+id/allListFragment"
        android:name="com.example.cookbook.Fragments.AllListFragment"
        android:label="AllListFragment"
        tools:layout="@layout/all_list_fragment"
        />
    <fragment
        android:id="@+id/popularTodaySecondList"
        android:name="com.example.cookbook.PopularTodaySecondList"
        android:label="PopularTodaySecondList"
        tools:layout="@layout/fragment_popular_today_second_screen"/>

</navigation>